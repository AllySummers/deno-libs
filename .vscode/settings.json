{
    "deno.enable": true,
    "editor.formatOnSave": true,
    "[typescript][typescriptreact][javascript][javascriptreact][yaml][json][jsonc][jsonl][markdown][html]": {
        "editor.defaultFormatter": "denoland.vscode-deno"
    },
    "editor.indentSize": "tabSize",
    "editor.detectIndentation": false,
    "testing.gutterEnabled": true,
    "deno.testing.args": [
        "--allow-all",
        "--no-check",
        "--hide-stacktraces"
    ]
}
